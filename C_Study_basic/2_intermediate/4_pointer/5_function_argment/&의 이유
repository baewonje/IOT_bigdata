int num;
scanf("%d", num); <= call by value 되기 때문에 num에는 
					scanf 내부의 결과가 적용이 안된다.
					
int scanf(char* option, int second_param){
..........
	second_param=5;
	}
	
	scanf("%d", &num);
	int scanf(char* option, int second_param){
	  ..........
	second_param=5;
	}
	
	
	문제1 힌트 void find_odd(int *ptr, int size)
	홀수를 출력하는 알고리즘 구현
	배열의 모든 요소를 접근하면서 홀수이면 출력,
	홀수가 아니면 skip
	
	void find_even(int *ptr, int size);
	짝수를 출력하는 알고리즘 구현
	배열의 모든 요소를 접근하면서 짝수이면 출력
	홀수가 아니면skip
	
	void main();
	10개의 정수를 입력
	