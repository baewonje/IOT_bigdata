#include <stdio.h>

void main(){
		int num;
		int num2=0;
		int num3;
		int num4=0;
		double num5,num6,num7;


		printf("몇개의 정수를 입력할 겁니까? : ");
		scanf("%d", &num);

		while(num2 < num  ){
				printf("개의 정수를 입력하세요 :");
				scanf("%d", &num3);
				num4= num4+num3;
				num2++;
		}
		num5 = num4;
		num6 = num;
		num7 = (double)num5/(double)num6;
		printf("총합의 평균 : %f\n", num7);

		

}


